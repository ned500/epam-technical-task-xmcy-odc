{% include 'base.html.twig' %}

{% block body %}
    <h1>Home</h1>
    {{ form(form) }}
    {{ history ? _self.table(history) }}

{% endblock %}

{% macro table(history) %}
    <table id="history-table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Open</th>
            <th>High</th>
            <th>Low</th>
            <th>Close</th>
            <th>Volume</th>
        </tr>
        </thead>
        <tbody>
        {% for price in history.prices %}
            <tr>
                <td>{{ price.date|date('Y-m-d') }}</td>
                {% for field in ['open', 'high', 'low', 'close', 'volume'] %}
                    <td>{{ price[field]|default|round(3) }}</td>
                {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endmacro %}

{% block stylesheets %}
    <style>
        #history-table {
            margin-top: 2em;
            border: solid black 2px;
            border-collapse: collapse;
        }
        #history-table td,
        #history-table th {
            padding: 3px 5px;
            border: solid black 1px;
        }
    </style>
{% endblock %}
